generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}


model LinkGen {
  id             String    @id @default(uuid())
  storeSlug      String
  ipAddress      String?
  createdAt      DateTime  @default(now())
  chainExpiresAt DateTime? // 체인 전체의 만료일 (동일 LinkGen의 모든 쿠폰이 공유)
  
  coupons        Coupon[]
}

model Coupon {
  id        String   @id // Custom ID format (STORE-XXX)
  code      String   // Unique hidden code if needed, or same as ID
  status    String   @default("ISSUED") // "ISSUED" or "USED"
  storeId   String
  storeName String
  benefit   String
  issuedAt  DateTime @default(now())
  usedAt    DateTime?
  expiresAt DateTime?
  
  linkGenId String?
  linkGen   LinkGen? @relation(fields: [linkGenId], references: [id])
}
